<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RichardGalarzaEP1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
            <Label Text="Menu Principal" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
        </Frame>
        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png "/>
        <Label x:Name="lblUsuario"/>
        <Frame/>
        <Button x:Name="btnRegistro"  Text="ABRIR REGISTRO" TextColor="Black" FontAttributes="Bold" BackgroundColor="Aquamarine" Clicked="btnRegistro_Clicked"/>
        <Frame/>
        <Button x:Name="btnResumen"  Text="ABRIR RESUMEN" TextColor="Black" FontAttributes="Bold" BackgroundColor="Aquamarine" Clicked="btnResumen_Clicked"/>
        <Frame/>
    </StackLayout>


</ContentPage>
